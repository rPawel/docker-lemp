/var/log/php/php-errors.log {
        rotate 7
        daily
        missingok
        notifempty
        compress
        delaycompress
        create 644 www-data adm
        postrotate
                /usr/lib/php/php7.2-fpm-reopenlogs
        endscript
}

/var/log/php/fpm.log {
        rotate 7
        daily
        missingok
        notifempty
        compress
        delaycompress
        create 644 www-data adm
        postrotate
                /usr/lib/php/php7.2-fpm-reopenlogs
        endscript
}
